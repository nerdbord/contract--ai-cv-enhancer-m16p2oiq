generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid())
  email    String     @unique
  name     String?
  clerkId  String     @unique
  cv       CV[]   // Relacja z modelem UserCV
}

model CV {
  id        Int       @id @default(sequence())
  extractedText  Json  // Pole do przechowywania tekstu z pliku PDF w formacie JSON
  cv        Bytes     // Pole do przechowywania pliku PDF
  name      String    // Nadana przez usera nazwa pliku
  fileName  String   
  mimeType  String   
  createdAt DateTime  @default(now())
  userId    String    // Klucz obcy do modelu User
  user      User      @relation(fields: [userId], references: [id])
}
